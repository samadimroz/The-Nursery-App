<%# <p id="notice"><%= notice %></p> 

<section class="h-100" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Shopping Carts</h3>
          <div>
            
          </div>
        </div>

        <table>
          <thead>
            <tr>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @carts.each do |cart| %>
              <tr>
                <td><li><i class="fas fa-shopping-cart"></i></td>
                <td></td>
                <td><i class="fas fa-eye"></i><%= link_to 'Show', cart %></td>
                <td></td>
                <td><i class="fas fa-edit"></i><%= link_to 'Edit', edit_cart_path(cart) %></td>
                <td></td>
                <td><i class="fas fa-trash"></i><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
<br>

